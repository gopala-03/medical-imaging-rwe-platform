{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Streamlit: Run App",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/streamlit",
            "args": [
                "run",
                "${workspaceFolder}/app.py",
                "--server.port",
                "5000"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Database Setup",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/setup_db.py",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}
